# direnv configuration for automatic development environment activation
# Install direnv: https://direnv.net/docs/installation.html

if ! has nix_direnv_version || ! nix_direnv_version 3.0.4; then
  source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/3.0.4/direnvrc" "sha256-DzlYZ33mWF/Gs8DDeyjr8mnVmQGx7ASYqA5WlxwvBG4="
fi

# Use flake if available, otherwise fall back to shell.nix
if [ -f flake.nix ]; then
  use flake
else
  use nix
fi

# Project-specific environment variables
export BUILD_YEW_UI=1
export RUST_LOG=debug
export RUST_BACKTRACE=1

# Create directories for logs if they don't exist
mkdir -p ~/.mcp-proxy/logs

# Load local .env file if it exists (for secrets)
if [ -f .env ]; then
  dotenv .env
fi